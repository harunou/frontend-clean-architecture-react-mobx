{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
      "useDefineForClassFields": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "react-jsx",
      "paths": {
        "@modules/*": ["./src/modules/*"],
        "@stores/*": ["./src/stores/*"],
        "@api/*": ["./src/api/*"],
        "@testing-tools": ["./src/testing-tools.ts"]
      }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules" ]
}
